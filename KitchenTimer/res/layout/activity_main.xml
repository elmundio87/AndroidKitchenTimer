<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/edt_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="Minutes"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_startTimers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="startTimer"
        android:text="Start" />

    <Button
        android:id="@+id/btn_addTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edt_minutes"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/edt_minutes"
        android:onClick="addTimer"
        android:text="Add" />

    <LinearLayout
        android:id="@+id/layout_timers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_addTimer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_startTimers"
        android:layout_marginTop="16dp"
        android:orientation="vertical" >

    </LinearLayout>

</RelativeLayout>