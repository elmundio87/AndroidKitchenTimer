<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="53dp" >

        <Button
            android:id="@+id/btn_startTimers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startTimer"
            android:text="Start" />

        <Button
            android:id="@+id/btn_stopTimers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pauseTimer"
            android:text="Pause" />

        <Button
            android:id="@+id/btn_resetTimers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="resetTimer"
            android:text="Reset" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_timers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_weight="0.99"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <EditText
            android:id="@+id/edt_label"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name (Optional)" />

        <EditText
            android:id="@+id/edt_minutes"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:ems="10"
            android:hint="Minutes"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_addTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="addTimer"
            android:text="Add" />
    </LinearLayout>

</LinearLayout>